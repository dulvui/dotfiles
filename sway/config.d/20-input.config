#
# Input configuration
#
input type:touchpad {
    dwt enabled
    tap disabled
    # tap enabled
    natural_scroll disabled
    middle_emulation enabled
}
#
# Keyboard layouts
#
input type:keyboard {
    # xkb_layout "us(colemak_dh)"
    xkb_layout "us(colemak_dh),de(us),it(us)"
    # langauge toggle with right ctrl
    # make caps lock behave like esc
    xkb_options "grp:rctrl_toggle,caps:escape"
}
